<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medicationbox" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".perscrip_upload_choice"
            android:label="@string/title_activity_perscrip_upload_choice"
            android:screenOrientation="portrait"/>

        <activity android:name=".DocumentView"
            android:label="MedicationBox"></activity>

        <activity android:name=".InsuranceView"
            android:label="MedicationBox"></activity>

        <activity android:name=".PerscriptionView"
            android:label="MedicationBox"></activity>

        <activity
            android:name=".insure_upload_choice"
            android:label="@string/title_activity_document_upload_choice"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" /> <!--gets rid of warning-->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UploadImageActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".Homepage"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".AddCardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".AddBankActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".AddPmtActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".PaymentActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>


        <activity
            android:name=".BoxActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>

        <activity
			android:screenOrientation="portrait"
			android:parentActivityName=".LoginActivity"
			android:label="@string/app_name"
            android:name=".RegisterActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <activity
            android:name=".EmailVerify"
            android:label="@string/app_name"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>