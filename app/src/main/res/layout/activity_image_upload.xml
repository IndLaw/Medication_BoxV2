<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UploadImageActivity">

    <LinearLayout
        android:id="@+id/layout_button"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="600">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ImageUploadHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_revert"
            app:backgroundTint="@color/queenBlue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:gravity="center">

            <TextView
                android:layout_width="297dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="20dp"
                android:text="Please Enter Your Insurance Information"
                android:textColor="@color/queenBlue"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="top">


            <Button
                android:id="@+id/btnChoose"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/lightBlue"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                android:text="Choose"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@color/lightBlue"
                android:fontFamily="sans-serif-black"
                android:padding="16dp"
                android:text="Upload"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>