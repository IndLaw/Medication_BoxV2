<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/InsuranceEnterHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:backgroundTint="@color/queenBlue"/>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16dp"
            android:textColor="@color/queenBlue"
            android:text="Please Enter Your Insurance Information"/>

        <EditText
            android:id="@+id/ipname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Insured" />

        <EditText
            android:id="@+id/ipolicynum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Policy Number"
            android:inputType="number"
            android:padding="12dp" />

        <EditText
            android:id="@+id/iplanname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Plan" />

        <EditText
            android:id="@+id/icopayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:ems="10"
            android:padding="12dp"
            android:inputType="number"
            android:hint="Copayment" />

        <EditText
            android:id="@+id/icompanyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Insurance Company" />

        <Button
            android:id="@+id/insurancenext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/lightBlue"
            android:fontFamily="sans-serif-black"
            android:text="Next"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>