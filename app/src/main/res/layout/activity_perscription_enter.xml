<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="500dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/patientsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Patient" />

        <EditText
            android:id="@+id/doctorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Doctor" />

        <EditText

            android:id="@+id/doctorsaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Address of Doctor's Office" />

        <EditText
            android:id="@+id/patientsaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Address of Patient" />

        <EditText
            android:id="@+id/medsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Name of Medication" />

        <EditText
            android:id="@+id/perscripdose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Dosage" />

        <EditText
            android:id="@+id/patientsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="number"
            android:hint="Age of Patient" />

        <EditText
            android:id="@+id/refillnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="number"
            android:hint="Number of Refills" />

        <EditText
            android:id="@+id/perquantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:hint="Quantity" />

        <Button
            android:id="@+id/nextperscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="20dp"
            android:background="@color/lightBlue"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
